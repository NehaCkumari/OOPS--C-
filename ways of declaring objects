//different ways of declaring objects of a class
#include<iostream>
#include<string>
using namespace std;
class human{
	public:
		string name;

		void print_name()
		{
			cout<<"My name is "<< name<<endl;
		}



};
int main()
{
	human anil;//stored in stack
	human *bunty = new human();// stored in heap
	anil.name="anil";
	anil.print_name();
	bunty->name="bunty";
	bunty->print_name();
	return 0;
}
